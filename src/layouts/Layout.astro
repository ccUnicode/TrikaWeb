---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";

export interface Props {
	title?: string;
	lang?: string;
	favicon?: string;
}

const {
	title = "TrikaWeb",
	lang = "es",
	favicon = "/img/icono.png",
} = Astro.props as Props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" href={favicon} />
		<title>{title}</title>
	</head>
	<body class="bg-global-bg text-global-text antialiased">
		<SiteHeader />
		<main>
			<slot />
		</main>
		<footer class=" bg-global-surface text-center py-6 mt-12">
			<p class="text-global-text">
				Â© {new Date().getFullYear()} Unicode. Todos los derechos reservados.
			</p>
		</footer>
	</body>
	<style>
		html,
		body {
			margin: 0;
			width: 100%;
			height: 100%;
		}
	</style>
</html>
