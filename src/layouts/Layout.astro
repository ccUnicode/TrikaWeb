---
import "../styles/global.css";
import SiteHeader from "../components/SiteHeader.astro";

export interface Props {
	title?: string;
	description?: string;
	keywords?: string;
	lang?: string;
	favicon?: string;
	ogImage?: string;
}

const {
	title = "TrikaWeb - Planchas y Reseñas de Profesores UNI",
	description = "Encuentra planchas resueltas, exámenes pasados y reseñas de profesores de la Universidad Nacional de Ingeniería (UNI). Prepárate mejor para tus evaluaciones.",
	keywords = "planchas uni, examenes uni, profesores uni, reseñas profesores, universidad nacional de ingenieria, exámenes resueltos, solucionarios,trikaweb,uni,trika,web,owo",
	lang = "es",
	favicon = "/img/icono.png",
	ogImage = "/img/og-image.png",
} = Astro.props as Props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO Meta Tags -->
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="Unicode - TrikaWeb" />
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(ogImage, Astro.site)} />
		<meta property="og:locale" content="es_PE" />
		<meta property="og:site_name" content="TrikaWeb" />

		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={canonicalURL} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={new URL(ogImage, Astro.site)} />

		<!-- Favicon -->
		<link
			rel="icon"
			type="image/png"
			sizes="96x96"
			href="/favicon-96x96.png"
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link
			rel="apple-touch-icon"
			sizes="180x180"
			href="/apple-touch-icon.png"
		/>
		<meta name="apple-mobile-web-app-title" content="TrikaWeb" />
		<link rel="manifest" href="/site.webmanifest" />

		<!-- Title -->
		<title>{title}</title>

		<!-- Schema.org Structured Data -->
		<script
			type="application/ld+json"
			set:html={JSON.stringify({
				"@context": "https://schema.org",
				"@type": "EducationalOrganization",
				name: "TrikaWeb",
				description:
					"Plataforma de planchas y reseñas de profesores de la Universidad Nacional de Ingeniería",
				url: Astro.site,
				logo: new URL("/img/icono.png", Astro.site),
				address: {
					"@type": "PostalAddress",
					addressCountry: "PE",
					addressLocality: "Lima",
				},
			})}
		/>

		<!-- Theme initialization: Dark mode only -->
		<script is:inline>
			document.documentElement.classList.add("dark");
		</script>
	</head>
	<body
		class="bg-global-bg text-global-text antialiased flex flex-col min-h-screen"
	>
		<SiteHeader />
		<main class="pt-16 flex-grow">
			<slot />
		</main>
		<footer
			class="bg-global-surface text-center py-6 mt-12 relative overflow-hidden"
		>
			<p class="text-global-text">
				© {new Date().getFullYear()}
				<a
					href="/admin/upload"
					class="text-inherit no-underline hover:text-global-text cursor-default"
					>Unicode</a
				>. Todos los derechos reservados.
			</p>
		</footer>
	</body>
	<style>
		html,
		body {
			margin: 0;
			width: 100%;
			height: 100%;
		}
	</style>
</html>
