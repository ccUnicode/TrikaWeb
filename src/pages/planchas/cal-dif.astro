        <CardExam ciclo="23-I" profesor="Prof. Arámbulo Ostos" tieneSolucion={true} />
        <CardExam ciclo="22-II" profesor="Prof. Arámbulo Ostos" tieneSolucion={true} />
      </div>
    </section>

    <section id="pc4" class="w-full scroll-mt-32 rounded-2xl bg-global-surface px-6 md:px-16 py-10 md:py-12">
      <ContainerCardExam titulo="Práctica Calificada 4" />
