---
import "../../styles/global.css";
import Layout from "../../layouts/Layout.astro";
import ContainerCardExam from "../../components/ContainerCardExam.astro";
import CardExam from "../../components/CardExam.astro";
import PageSubHeader from "../../components/PageSubHeader.astro";

const secciones = [
  { id: "pc1", label: "PC1", titulo: "Práctica Calificada 1" },
  { id: "pc2", label: "PC2", titulo: "Práctica Calificada 2" },
  { id: "pc3", label: "PC3", titulo: "Práctica Calificada 3" },
  { id: "pc4", label: "PC4", titulo: "Práctica Calificada 4" },
  { id: "ep",  label: "EP",  titulo: "Examen Parcial" },
  { id: "ef",  label: "EF",  titulo: "Examen Final" },
];

const examenes = [
  { ciclo: "25-I", profesor: "Prof. Arámbulo Ostos", tieneSolucion: true },
  { ciclo: "24-II", profesor: "Prof. Arámbulo Ostos", tieneSolucion: true },
  { ciclo: "24-I", profesor: "Prof. Arámbulo Ostos", tieneSolucion: false },
  { ciclo: "23-II", profesor: "Prof. Arámbulo Ostos", tieneSolucion: false },
  { ciclo: "23-I", profesor: "Prof. Arámbulo Ostos", tieneSolucion: true },
  { ciclo: "22-II", profesor: "Prof. Arámbulo Ostos", tieneSolucion: true },
];
---

<Layout title="Cálculo Diferencial - TrikaWeb" lang="es">
 <PageSubHeader title="Cálculo Diferencial" tabs={secciones} />

  <div class="mx-auto max-w-[1400px] px-4 sm:px-8 lg:px-10 xl:px-16 py-10 space-y-10">
    {secciones.map((sec) => (
      <section
        id={sec.id}
        class="w-full scroll-mt-32 rounded-2xl bg-global-surface px-6 md:px-16 py-10 md:py-12"
      >
        <ContainerCardExam titulo={sec.titulo} />
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-6 py-4 my-8">
          {examenes.map((exam) => (
            <CardExam
              ciclo={exam.ciclo}
              profesor={exam.profesor}
              tieneSolucion={exam.tieneSolucion}
            />
          ))}
        </div>
      </section>
    ))}
  </div>
</Layout>
