---
import Layout from '../layouts/Layout.astro';
import TeacherCard from '../components/TeacherCard.astro';
import IconSearch from '../components/icons/IconSearch.astro';
import IconChevronDown from '../components/icons/IconChevronDown.astro';
---

<Layout title="Profesores | Química I">
  <header class="w-full bg-global-surface">
    <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-12 py-5 flex items-center justify-between">
      <div class="text-global-primary-hover text-2xl md:text-3xl font-semibold">Química I</div>
      <div class="hidden md:flex items-center gap-3 rounded-xl border border-global-border px-4 py-2 bg-global-surface">
        <IconSearch class="text-global-border" />
        <input aria-label="Buscar profesor" placeholder="Ingresa el profesor…" class="bg-transparent placeholder:text-global-text-muted text-global-text focus:outline-none" />
      </div>
    </div>
  </header>

  <main class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-12 py-10 space-y-12">
    <!-- Sección: Teoría -->
    <section class="bg-global-surface rounded-xl p-8 space-y-6">
      <div class="flex items-center justify-between">
        <h2 class="text-global-text text-2xl md:text-3xl font-semibold">Teoría</h2>
        <button
          type="button"
          aria-label="Ordenar por calificación"
          class="hidden md:inline-flex items-center gap-2 rounded-lg border border-global-border px-3 py-2 text-sm font-medium text-global-text hover:text-global-primary-hover hover:bg-global-surface"
        >
          Ordenar por calificación
          <IconChevronDown class="text-global-text-muted opacity-60" />
        </button>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-6">
        <TeacherCard name="Carlos Arámbulo" role="Ing. Electrónico" rating={4} />
        <TeacherCard name="Nombre Apellido" role="Ing. Químico" rating={5} />
        <TeacherCard name="Nombre Apellido" role="Lic. Educación" rating={3} />
      </div>
    </section>

    <!-- Sección: Práctica -->
    <section class="bg-global-surface rounded-xl p-8 space-y-6">
      <div class="flex items-center justify-between">
        <h2 class="text-global-text text-2xl md:text-3xl font-semibold">Práctica</h2>
        <button
          type="button"
          aria-label="Ordenar por calificación"
          class="hidden md:inline-flex items-center gap-2 rounded-lg border border-global-border px-3 py-2 text-sm font-medium text-global-text hover:text-global-primary-hover hover:bg-global-surface"
        >
          Ordenar por calificación
          <IconChevronDown class="text-global-text-muted opacity-60" />
        </button>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-6">
        <TeacherCard name="Carlos Arámbulo" role="Ing. Electrónico" rating={4} />
        <TeacherCard name="Nombre Apellido" role="Ing. Químico" rating={5} />
        <TeacherCard name="Nombre Apellido" role="Lic. Educación" rating={3} />
      </div>
    </section>
  </main>

  <footer class="w-full py-4 text-center text-sm text-global-text-muted">
    © 2024 TrikaWeb. Todos los derechos reservados.
  </footer>
  
</Layout>
