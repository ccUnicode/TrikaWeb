---
import "../../styles/global.css";
---

<html lang="es" class="dark">
    <head>
        <meta charset="utf-8" />
        <title>Admin Login | TrikaWeb</title>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
    </head>
    <body
        class="flex min-h-screen items-center justify-center bg-global-bg text-global-text transition-colors duration-300"
    >
        <main class="w-full max-w-md px-4">
            <div
                class="rounded-3xl bg-global-card p-8 shadow-2xl ring-1 ring-white/10"
            >
                <header class="mb-8 text-center">
                    <h1 class="text-3xl font-bold text-global-primary">
                        Admin Access
                    </h1>
                    <p class="mt-2 text-sm text-global-text-muted">
                        Ingresa tus credenciales para continuar
                    </p>
                </header>

                <form action="/api/admin/login" method="POST" class="space-y-6">
                    <div>
                        <label
                            for="email"
                            class="block text-sm font-medium text-global-text-muted mb-2"
                        >
                            Email
                        </label>
                        <input
                            type="email"
                            name="email"
                            id="email"
                            required
                            class="w-full rounded-xl border border-global-border bg-global-surface px-4 py-3 text-sm text-global-text placeholder-gray-500 transition focus:border-global-primary-hover focus:outline-none focus:ring-1 focus:ring-global-primary-hover"
                            placeholder="admin@trikaweb.com"
                        />
                    </div>

                    <div>
                        <label
                            for="password"
                            class="block text-sm font-medium text-global-text-muted mb-2"
                        >
                            Contraseña
                        </label>
                        <input
                            type="password"
                            name="password"
                            id="password"
                            required
                            class="w-full rounded-xl border border-global-border bg-global-surface px-4 py-3 text-sm text-global-text placeholder-gray-500 transition focus:border-global-primary-hover focus:outline-none focus:ring-1 focus:ring-global-primary-hover"
                            placeholder="••••••••"
                        />
                    </div>

                    <button
                        type="submit"
                        class="w-full rounded-xl bg-global-primary px-4 py-3 text-sm font-semibold text-white shadow-lg shadow-green-500/20 transition hover:bg-global-primary-hover hover:shadow-green-500/30 focus:outline-none focus:ring-2 focus:ring-global-primary focus:ring-offset-2 focus:ring-offset-global-card"
                    >
                        Iniciar Sesión
                    </button>

                    <!-- Mensaje de error si existe en URL params -->
                    <div
                        id="error-message"
                        class="hidden mt-4 text-center text-sm text-red-500"
                    >
                        Credenciales inválidas
                    </div>
                </form>
            </div>
        </main>

        <script>
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has("error")) {
                document
                    .getElementById("error-message")
                    ?.classList.remove("hidden");
            }
        </script>
    </body>
</html>
