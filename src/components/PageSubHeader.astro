---
import "../styles/global.css";

export interface Tab {
  id: string;    // id de la secci√≥n: pc1, ep, teoria, practica, etc.
  label: string; // texto que se muestra en el tab
}

export interface Props {
  title: string;
  tabs: Tab[];
}

const { title, tabs } = Astro.props as Props;
---

<header class="sticky top-14 z-40 bg-[rgb(var(--global-surface)/0.95)] backdrop-blur border-b border-global-border">
  <div class="mx-auto max-w-[1400px] px-4 sm:px-8 lg:px-10 xl:px-16 py-3">
    <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
      <h1 class="text-2xl md:text-3xl font-medium text-global-primary-hover">
        {title}
      </h1>

      <!-- Slot opcional para la derecha (buscador, select, etc.) -->
      <div class="flex items-center gap-3">
        <slot name="right" />
      </div>
    </div>

    <nav class="mt-3 flex w-full items-baseline gap-2 overflow-x-auto pb-2 md:gap-4">
      {tabs.map((tab) => (
        <a
          href={`#${tab.id}`}
          class="whitespace-nowrap rounded-lg px-3 py-1 text-global-text-muted hover:bg-global-card hover:text-global-primary-hover transition"
        >
          {tab.label}
        </a>
      ))}
    </nav>
  </div>
</header>
