---
import QuestionCard, { type QuestionCardProps } from "./QuestionCard.astro";

export interface SolutionsPanelProps {
  title?: string;
  items: QuestionCardProps[];
}

const { title = "Soluciones", items } = Astro.props as SolutionsPanelProps;
---

<section class="mx-auto w-full max-w-[1200px] px-4 sm:px-6 lg:px-8">
  <div class="rounded-3xl bg-[#171A1F] p-6 sm:p-8 shadow-2xl ring-1 ring-black/20">
    <header class="mb-6 sm:mb-8">
      <h2 class="text-xl sm:text-2xl font-semibold text-white">{title}</h2>
    </header>

    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {items.map((q) => (
        <QuestionCard {...q} />
      ))}
    </div>
  </div>
</section>
